<tryton>
    <data>
        <!-- www.site -->
        <record model="ir.ui.view" id="site_form">
            <field name="model">www.site</field>
            <field name="type">form</field>
            <field name="name">site_form</field>
        </record>
        <record model="ir.ui.view" id="site_tree">
            <field name="model">www.site</field>
            <field name="type">tree</field>
            <field name="name">site_tree</field>
        </record>

        <record model="ir.model.access" id="site_access">
            <field name="model">www.site</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="site_access_admin">
            <field name="model">www.site</field>
            <field name="group" ref="res.group_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

        <record model="ir.action.act_window" id="site_action">
            <field name="name">Sites</field>
            <field name="res_model">www.site</field>
        </record>
        <record model="ir.action.act_window.view" id="site_action_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="site_tree"/>
            <field name="act_window" ref="site_action"/>
        </record>
        <record model="ir.action.act_window.view" id="site_action_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="site_form"/>
            <field name="act_window" ref="site_action"/>
        </record>

        <menuitem action="site_action" id="menu_site" parent="ir.menu_administration" sequence="200"/>

        <record model="ir.action.act_window" id="act_uri_form_relate">
            <field name="name">URIs</field>
            <field name="res_model">www.uri</field>
            <field name="domain"
                eval="[If(Eval('active_ids', []) == [Eval('active_id')], ('site', '=', Eval('active_id')), ('site', 'in', Eval('active_ids')))]"
                pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_uri_form_relate_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="uri_tree"/>
            <field name="act_window" ref="act_uri_form_relate"/>
        </record>
        <record model="ir.action.act_window.view" id="act_uri_form_relate_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="uri_form"/>
            <field name="act_window" ref="act_uri_form_relate"/>
        </record>
        <record model="ir.action.keyword" id="act_uri_form_relate_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">www.site,-1</field>
            <field name="action" ref="act_uri_form_relate"/>
        </record>

        <!-- www.uri -->
        <record model="ir.ui.view" id="uri_form">
            <field name="model">www.uri</field>
            <field name="type">form</field>
            <field name="name">uri_form</field>
        </record>
        <record model="ir.ui.view" id="uri_tree">
            <field name="model">www.uri</field>
            <field name="type">tree</field>
            <field name="name">uri_tree</field>
        </record>

        <record model="ir.model.access" id="uri_access">
            <field name="model">www.uri</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="uri_access_admin">
            <field name="model">www.uri</field>
            <field name="group" ref="res.group_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

        <record model="ir.action.act_window" id="uri_action">
            <field name="name">URIs</field>
            <field name="res_model">www.uri</field>
        </record>
        <record model="ir.action.act_window.view" id="uri_action_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="uri_tree"/>
            <field name="act_window" ref="uri_action"/>
        </record>
        <record model="ir.action.act_window.view" id="uri_action_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="uri_form"/>
            <field name="act_window" ref="uri_action"/>
        </record>
        <menuitem action="uri_action" id="menu_uri" parent="menu_site" sequence="10"/>

        <!-- www.uri.builder -->
        <record model="ir.ui.view" id="uri_builder_ask_form_view">
            <field name="model">www.uri.builder.ask</field>
            <field name="type">form</field>
            <field name="name">uri_builder_ask_form</field>
        </record>
        <record model="ir.ui.view" id="uri_builder_result_form_view">
            <field name="model">www.uri.builder.result</field>
            <field name="type">form</field>
            <field name="name">uri_builder_result_form</field>
        </record>

        <record model="ir.action.wizard" id="act_uri_builder">
            <field name="name">Build URIs</field>
            <field name="wiz_name">www.uri.builder</field>
        </record>
        <menuitem name="Build URIs" parent="menu_uri" action="act_uri_builder" id="menu_uri_builder" sequence="10"/>
    </data>
</tryton>
